.song-container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  height: 100%;
  padding: 32rpx 60rpx 48rpx;
}
.album {
  display: flex;
  align-items: center;
  flex: 5;
}
.album .pic {
  width: 100%;
  border-radius: 12rpx;
}
.song-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
}
.song-info .name {
  font-size: 50rpx;
  font-weight: bold;
  color: #fff;
}
.song-info .singer {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #ccc;
}
.lyric {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  color: #fff;
}
.progress {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
  color: #fff;
  font-size: 24rpx;
}
.progress .silder {
  margin-left: 18rpx;
  margin-right: 10rpx;
}
.progress .time {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.control {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 1;
  margin-right: 10rpx;
}
.control .btn {
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
}
.control .btn.btn-mode {
  width: 80rpx;
  height: 80rpx;
}
.control .btn.btn-play {
  width: 120rpx;
  height: 120rpx;
}
