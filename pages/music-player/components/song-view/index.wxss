.album {
  border-radius: 12rpx;
}
.song-info {
  margin-top: 64rpx;
}
.song-info .name {
  font-size: 50rpx;
  font-weight: bold;
  color: #fff;
}
.song-info .singer {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #ccc;
}
.lyric {
  margin: 48rpx auto 0;
  text-align: center;
  color: #ddd;
}
.progress {
  margin-top: 48rpx;
  color: #fff;
  font-size: 24rpx;
}
.progress .silder {
  margin-left: 18rpx;
  margin-right: 10rpx;
}
.progress .time {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.control {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 48rpx;
  margin-right: 10rpx;
}
.control .btn {
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
}
.control .btn.btn-mode {
  width: 80rpx;
  height: 80rpx;
}
.control .btn.btn-play {
  width: 120rpx;
  height: 120rpx;
}
