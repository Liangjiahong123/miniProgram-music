page {
  box-sizing: border-box;
}
.top {
  position: relative;
}
.top-pic {
  width: 100%;
  height: 400rpx;
}
.menu-info {
  position: absolute;
  bottom: 30rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  color: #fff;
}
.menu-info .icon {
  width: 70rpx;
  margin-right: 10rpx;
}
.favor,
.share {
  display: flex;
  align-items: center;
}

.song-list {
  padding: 0 24rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.song-list .border {
  border-bottom: 2rpx solid #eee;
}
