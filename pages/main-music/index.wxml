<van-search
  bind:focus="handleSearchFocus"
  value="{{ searchKey }}"
  shape="round"
  background="#fafafa"
  placeholder="搜索你喜欢的歌曲"
/>
<!-- banner -->
<swiper
  class="banner-list"
  wx:if="{{bannerList.length}}"
  style="height: {{bannerHeight}}px;"
  indicator-dots
  autoplay
  circular
>
  <block wx:for="{{bannerList}}" wx:key="bannerId">
    <swiper-item class="item">
      <image class="banner-pic" src="{{item.pic}}" mode="widthFix" bindload="onBannerImgLoaded" />
    </swiper-item>
  </block>
</swiper>
<!-- 歌曲推荐 -->
<view class="song-recommend" wx:if="{{getRandomRecSongs.length}}">
  <title-view title="歌曲推荐" bind:moreclick="handleNavToMoreSong" />

  <view class="song-list">
    <block wx:for="{{getRandomRecSongs}}" wx:key="id">
      <song-item songItem="{{item}}" />
    </block>
  </view>
</view>
<!-- 热门歌单 -->
<song-menu wx:if="{{hotSongMenu.length}}" songData="{{hotSongMenu}}" title="热门歌单" />
<!-- 推荐歌单 -->
<song-menu wx:if="{{recSongMenu.length}}" songData="{{recSongMenu}}" title="推荐歌单" />

<view class="ranking" wx:if="{{getShowRanks}}">
  <title-view title="巅峰榜" hasMore="{{false}}" />
  <view class="ranking-list">
    <block wx:for="{{getPeakRankData}}" wx:key="id">
      <rank-item rankItem="{{item}}" key="{{index}}" />
    </block>
  </view>
</view>
