/* components/video-item/index.wxss */
.video-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}
.album {
  display: flex;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}
.album .cover {
  width: 100%;
}
.play-info {
  position: absolute;
  bottom: 12rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 0 10rpx;
  color: #fff;
  font-size: 24rpx;
}
.play-count {
  display: flex;
  align-items: center;
}
.play-count .icon {
  width: 30rpx;
  margin-right: 8rpx;
}
.detail {
  margin-top: 10rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
