.song-item {
  display: flex;
  flex-direction: column;
}
.top {
  position: relative;
}
.top .cover {
  width: 100%;
  border-radius: 12rpx;
}
.playcount {
  position: absolute;
  bottom: 10rpx;
  right: 0;
  padding: 6rpx 10rpx;
  border-radius: 16rpx;
  color: #fff;
  font-size: 24rpx;
  background-color: rgba(0, 0, 0, 0.5);
}
.bottom {
  width: 100%;
  font-size: 26rpx;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
