.container {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 450rpx;
  color: #fff;
}
.bg-pic {
  width: 100%;
  height: 100%;
}
.bg-cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(5px);
}
.bg-cover .top {
  display: flex;
  align-items: center;
  margin-top: 60rpx;
  padding: 0 50rpx;
  width: 100%;
}
.top .left-img {
  width: 220rpx;
  height: 220rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}
.top .right-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  margin-left: 50rpx;
  color: #fff;
}
.right-info .anthor {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  font-size: 24rpx;
}
.right-info .title {
  font-size: 32rpx;
}
.right-info .anthor .avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  margin-right: 14rpx;
}
.right-info .desc {
  max-width: 400rpx;
  font-size: 24rpx;
  margin-top: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.bottom {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 50rpx;
  width: 100%;
  color: #fff;
}
.bottom .icon {
  width: 70rpx;
  margin-right: 10rpx;
}
.favor,
.share {
  display: flex;
  align-items: center;
}
